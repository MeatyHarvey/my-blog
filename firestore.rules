rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all documents
    match /{document=**} {
      allow read, write: if true;
    }
    
    // User posts - allow public read, authenticated write
    match /userPosts/{postId} {
      allow read: if true;
      allow write: if true; // For demo purposes, adjust as needed
    }
    
    // Comments - allow public read, authenticated write
    match /comments/{commentId} {
      allow read: if true;
      allow write: if true; // For demo purposes, adjust as needed
    }
    
    // Views and likes - allow public read/write for analytics
    match /views/{viewId} {
      allow read, write: if true;
    }
    
    match /likes/{likeId} {
      allow read, write: if true;
    }
    
    match /postViews/{postViewId} {
      allow read, write: if true;
    }
  }
}
